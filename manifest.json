{
  "manifest_version": 3,
  "name": "Utah Divorce Filing Assistant",
  "version": "1.0.0",
  "description": "Helps users filing for divorce in Utah by uploading documents and auto-filling MyCase forms",
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://mycase.utcourts.gov/*",
    "https://your-platform-domain.com/*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mycase.utcourts.gov/InterviewWEB/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*", "popup/*"],
      "matches": ["https://mycase.utcourts.gov/*"]
    }
  ]
}
