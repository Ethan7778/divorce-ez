{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowJs": false,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite/client"]
  },
  "include": ["src/main.tsx", "src/App.tsx", "src/index.css"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
